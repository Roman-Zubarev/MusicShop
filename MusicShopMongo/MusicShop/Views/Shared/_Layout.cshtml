<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MusicShop</title>
    @* <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MusicShop.styles.css" asp-append-version="true" />*@
    <link rel="stylesheet" href="~/css/Header.css" asp-append-version="true" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@300&display=swap" rel="stylesheet">
</head>
<body>
    <header class="header" id="myHeader">
        <div>
            <a asp-action="Index" asp-controller="Home" class="Logo">Records</a>
            <div class="leftLinks">
                <a asp-action="Index" asp-controller="Product" class="navigation_links">Products </a>
                <a asp-action="Index" asp-controller="Author" class="navigation_links">Authors</a>
                
                @if (!BDWorks.IsAdmin)
                {
                    <a asp-action="Index" asp-controller="Basket" class="navigation_links">Basket</a>
                    <a asp-action="Index" asp-controller="Order" asp-route-status="Accepted" class="navigation_links">Orders</a>
                    <a asp-action="Index" asp-controller="Reserve" class="navigation_links">Reserved</a>

                }

 
                <a asp-action="Register" asp-controller="User" class="navigation_links">Register</a>

                @if (BDWorks.IsAdmin)
                {
                    <a asp-action="AdminStatistics" asp-controller="Order" asp-route-minDate="@DateTime.MinValue" asp-route-maxDate="@DateTime.Now" asp-route-status="Accepted" class="navigation_links">Orders</a>
                    <a asp-action="Index" asp-controller="Statistics" class="navigation_links">Statistics</a>
                    <a asp-action="Insert" asp-controller="Product" class="navigation_links">INSERT</a>
                    <a asp-action="Insert" asp-controller="Author" class="navigation_links">INSERT Author</a>

                }
            </div>
        </div>


@*         <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">MusicShop</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Product" asp-action="Index">Products</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav> *@
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

@*     <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - MusicShop - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer> *@
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/Header.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
